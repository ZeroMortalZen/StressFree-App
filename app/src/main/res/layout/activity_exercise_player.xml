<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ExercisePlayer.ExercisePlayerActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="281dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:background="@drawable/innerblckround_btn"
        android:fontFamily="@font/baloo_paaji"
        android:text="Yoga Excrcise 1"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageViewExerciseGif"
        android:layout_width="346dp"
        android:layout_height="282dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/ExDialog2"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/countdown_timer"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:fontFamily="@font/baloo_paaji"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonbckblack"
        android:text="Back"
        android:textColor="#F1E7E7" />

</LinearLayout>
