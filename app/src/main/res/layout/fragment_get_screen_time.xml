<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_background"
    tools:context=".GetScreenTimeFragment">

    <ProgressBar
        android:id="@+id/progressBar2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="351dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="262dp" />

    <TextView
        android:id="@+id/precentageView"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="136dp"
        android:layout_marginTop="469dp"
        android:fontFamily="@font/baloo_paaji"
        android:text="0%"
        android:textAlignment="center"
        android:textColor="#040202"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/typewriter_text"
        android:layout_width="356dp"
        android:layout_height="409dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/baloo_paaji"
        android:text="Checking Screen Usage"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/screenTimeTextView"
        android:layout_width="256dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="124dp"
        android:fontFamily="@font/baloo_paaji"
        android:text="TextView"
        android:textSize="20sp" />

    <Button
        android:id="@+id/NextScreenDataBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:text="Next" />
</RelativeLayout>