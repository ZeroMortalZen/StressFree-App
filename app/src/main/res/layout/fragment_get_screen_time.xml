<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".GetScreenTimeFragment">

    <ProgressBar
        android:id="@+id/progressBar2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="330dp"
        android:background="@drawable/buttonbckblack"
        android:progressDrawable="@drawable/curved_progress_bar" />

    <TextView
        android:id="@+id/precentageView"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="137dp"
        android:layout_marginTop="295dp"
        android:fontFamily="@font/baloo_paaji"
        android:text="0%"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/typewriter_text"
        android:layout_width="376dp"
        android:layout_height="279dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/baloo_paaji"
        android:text="Checking Screen Usage"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/screenTimeTextView"
        android:layout_width="256dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="79dp"
        android:layout_marginBottom="250dp"
        android:fontFamily="@font/baloo_paaji"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/NextScreenDataBtn"
        android:layout_width="168dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="189dp"
        android:background="@drawable/innerblckround_btn"
        android:fontFamily="@font/baloo_paaji"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />
</RelativeLayout>