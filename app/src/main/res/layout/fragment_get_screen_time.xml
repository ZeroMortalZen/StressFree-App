<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetScreenTimeFragment">

    <ProgressBar
        android:id="@+id/progressBar2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="351dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="270dp" />

    <TextView
        android:id="@+id/precentageView"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="139dp"
        android:layout_marginTop="477dp"
        android:fontFamily="@font/baloo_paaji"
        android:text="0%"
        android:textAlignment="center"
        android:textColor="#040202"
        android:textSize="34sp" />

    <com.linx.stress_free_app.AnimationController.Typewriter
        android:id="@+id/typewriterLoadingDialog2"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="52dp"
        android:textAlignment="center"
        android:textColor="#1B1A1A"
        android:textSize="34sp"
        app:fontFamily="@font/baloo_paaji" />

    <TextView
        android:id="@+id/screenTimeTextView"
        android:layout_width="163dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="131dp"
        android:layout_marginBottom="86dp"
        android:text="TextView" />

    <Button
        android:id="@+id/NextScreenDataBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Next" />
</RelativeLayout>