<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        tools:context=".MainMenu.MainMenuFragments.ExerciseFragment">

        <TextView
            android:id="@+id/rewardText2"
            android:layout_width="87dp"
            android:layout_height="51dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="68dp"
            android:fontFamily="@font/baloo_paaji"
            android:text="You Earned A Point"
            android:textColor="#FFFAFA"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/rewardmedicon2"
            android:layout_width="62dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="327dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/reward"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textviewtaskcom2"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="201dp"
            android:fontFamily="@font/baloo_paaji"
            android:text="Daily Exercise Completed :  0"
            android:textColor="#FFFEFE" />

        <ImageView
            android:id="@+id/imageTask2"
            android:layout_width="61dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/num0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:layout_centerInParent="true"
            android:layout_marginStart="154dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/baloo_paaji"
            android:text="Afternoon"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/medbutton1"
            android:layout_width="230dp"
            android:layout_height="73dp"
            android:layout_below="@id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-313dp"
            android:layout_marginEnd="44dp"
            android:background="@drawable/medimagebutton"
            android:text="Button" />

        <TextView
            android:id="@+id/ex1text"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/medbutton1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:fontFamily="@font/baloo_paaji"
            android:text="Monring "
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/medbutton2"
            android:layout_width="242dp"
            android:layout_height="69dp"
            android:layout_below="@id/ex1text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="213dp"
            android:background="@drawable/medimagebutton"
            android:text="Button" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/medbutton2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="174dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/baloo_paaji"
            android:text="Night"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_below="@id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-289dp"
            android:layout_marginEnd="69dp"
            android:background="@drawable/medimagebutton"
            android:contentDescription="TODO"
            android:text="Button" />

        <LinearLayout
        android:id="@+id/verticalStepProgressBar"
        android:layout_width="76dp"
        android:layout_height="421dp"
        android:layout_alignTop="@+id/medbutton1"
        android:layout_alignBottom="@+id/medbutton2"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="-2dp"
        android:layout_toStartOf="@+id/medbutton1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:id="@+id/step1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="TODO"
            android:src="@drawable/circle_uncompleted"
            tools:ignore="ImageContrastCheck" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/vertical_line" />

            <ImageView
                android:id="@+id/step2"
                android:layout_width="62dp"
                android:layout_height="69dp"
                android:src="@drawable/circle_uncompleted"
                tools:ignore="ImageContrastCheck" />

        <View
            android:layout_width="9dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/vertical_line" />

        <ImageView
            android:id="@+id/step3"
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:contentDescription="TODO"
            android:src="@drawable/circle_uncompleted" />

        <!-- Add more ImageView and View elements for additional steps and lines as needed -->

    </LinearLayout>

        <Button
            android:id="@+id/YTbutton"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="107dp"
            android:text="Explanation Video Click here"
            android:textColor="#F9F9FA" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/images_recycler_view"
            android:layout_width="386dp"
            android:layout_height="228dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/curved_progress_bar" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="122dp"
            android:layout_marginBottom="233dp"
            android:fontFamily="@font/baloo_paaji"
            android:text="More Exercises"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>