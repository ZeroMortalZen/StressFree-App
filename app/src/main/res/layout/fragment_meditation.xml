    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="273dp"
        android:layout_marginBottom="776dp"
        android:text="Why do breathing exercise"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="104dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="391dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/curved_progress_bar"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iconMED1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="30dp"
            android:src="@drawable/breathex" />

        <LinearLayout
            android:layout_width="182dp"
            android:layout_height="93dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleMED1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Afternoon Breathing Exercise"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionMED1"
                android:layout_width="151dp"
                android:layout_height="58dp"
